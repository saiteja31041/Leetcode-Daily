class Solution {
    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> result = new ArrayList<>();
        preorder(root, result);
        return result;
    }

    private void preorder(TreeNode node, List<Integer> result) {
        if (node == null) return;

        result.add(node.val);             
        preorder(node.left, result);       // Step 2: Traverse left subtree
        preorder(node.right, result);      // Step 3: Traverse right subtree
    }
}
